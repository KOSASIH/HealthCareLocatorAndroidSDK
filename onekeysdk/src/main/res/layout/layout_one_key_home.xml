<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/default_padding">

    <ImageView
        android:id="@+id/ivFind"
        android:layout_width="@dimen/default_icon_size"
        android:layout_height="@dimen/default_icon_size"
        android:background="@drawable/bg_green_circle"
        android:padding="8dp"
        app:tint="@color/colorOneKeyGreen"
        tools:src="@drawable/baseline_search_white_24dp"
        tools:tint="@color/colorOneKeyGreen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_padding"
        android:orientation="vertical">

        <com.ekino.onekeysdk.custom.text.OneKeyTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find and Locate other HCP"
            android:textColor="@color/colorOneKeyText"
            android:textSize="@dimen/default_padding"
            android:textStyle="bold" />

        <com.ekino.onekeysdk.custom.text.OneKeyTextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consect adipiscing elit"
            android:textColor="@color/colorOneKeyText"
            android:textSize="@dimen/default_padding" />
    </LinearLayout>
</LinearLayout>