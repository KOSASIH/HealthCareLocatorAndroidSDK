<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/default_padding"
        android:paddingBottom="@dimen/default_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.healthcarelocator.custom.text.OneKeyTextView
                android:id="@+id/tvSpeciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General"
                app:OneKeyTextColor="OneKeyColorSecondary"
                app:OneKeyTextStyle="OneKeyStyleResultTitle" />

            <com.healthcarelocator.custom.text.OneKeyTextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text=""
                android:visibility="gone"
                app:OneKeyTextColor="OneKeyColorGreyDark" />

            <com.healthcarelocator.custom.text.OneKeyTextView
                android:id="@+id/tvCreateAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding_tiny"
                android:text="1 day ago"
                android:textColor="@color/colorOneKeyText"
                android:textSize="@dimen/default_text_small"
                app:OneKeyTextStyle="OneKeyStyleSmall" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="@dimen/default_icon_size"
            android:layout_height="@dimen/default_icon_size"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="-5dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/baseline_close_black_24dp"
            app:tint="@color/gray" />
    </LinearLayout>

    <com.healthcarelocator.custom.OneKeyView
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        app:OneKeyViewColor="OneKeyColorCardBorder" />
</FrameLayout>