<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayLighter"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/default_padding">

        <LinearLayout
            android:id="@+id/newSearchWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal">

            <com.ekino.onekeysdk.custom.text.OneKeyTextView
                android:id="@+id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white_border_corner"
                android:hint="Find Healthcare Professional"
                android:padding="@dimen/default_padding" />

            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="-10dp"
                android:background="@drawable/bg_main_button_corner"
                android:paddingStart="@dimen/default_padding"
                android:paddingEnd="@dimen/default_padding"
                android:src="@drawable/baseline_search_white_24dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayLight" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding"
            android:background="@drawable/bg_white_border_corner"
            android:minHeight="300dp"
            android:orientation="vertical"
            android:padding="16dp">

            <com.ekino.onekeysdk.custom.text.OneKeyTextView
                android:id="@+id/tvHomeHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Find and Locate\nHealthcare Professional"
                android:textColor="@color/colorOneKeyBlue"
                android:textSize="@dimen/default_text_large"
                app:primaryText="true" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false" />


            <com.ekino.onekeysdk.custom.text.OneKeyTextView
                android:id="@+id/btnStartSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding_x_large"
                android:background="@drawable/bg_main_button_corner"
                android:gravity="center"
                android:padding="@dimen/default_padding_small"
                android:text="Start a New Search"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_big" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>