<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/default_padding"
    android:layout_marginBottom="@dimen/default_padding"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/default_padding"
        android:paddingTop="@dimen/default_padding"
        android:paddingEnd="@dimen/default_padding_tiny"
        android:paddingBottom="@dimen/default_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.healthcarelocator.custom.text.HCLTextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/default_text"
                app:OneKeyTextColor="OneKeyColorSecondary"
                app:OneKeyTextStyle="OneKeyStyleResultTitle"
                tools:text="Dr." />

            <com.healthcarelocator.custom.text.HCLTextView
                android:id="@+id/tvSpeciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorOneKeyText"
                android:textSize="@dimen/default_text"
                app:OneKeyTextColor="OneKeyColorDark"
                app:OneKeyTextStyle="OneKeyStyleResultSubtitle"
                tools:text="Dr." />

            <com.healthcarelocator.custom.text.HCLTextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/gray"
                android:textSize="@dimen/default_text"
                app:OneKeyTextColor="OneKeyColorGreyLight"
                tools:text="Dr." />

            <com.healthcarelocator.custom.text.HCLTextView
                android:id="@+id/tvDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorOneKeyText"
                android:textSize="@dimen/default_text"
                app:OneKeyTextColor="OneKeyColorDark"
                tools:text="Distance" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_keyboard_arrow_right_black_36dp"
            app:tint="@color/gray" />
    </LinearLayout>
</FrameLayout>