<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <LinearLayout
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_padding_large"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/default_icon_size_small"
            android:layout_height="@dimen/default_icon_size_small"
            android:padding="3dp"
            android:src="@drawable/baseline_arrow_back_ios_black_36dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textAllCaps="true"
            android:textColor="@color/colorOneKeyText"
            android:textSize="@dimen/default_text_big" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API Key"
        android:textColor="@color/colorOneKeyText"
        android:textSize="@dimen/default_text" />

    <EditText
        android:id="@+id/edtAPIKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_tiny"
        android:background="@drawable/bg_white_border_corner"
        android:hint="Input your API Key"
        android:inputType="text"
        android:maxLines="1"
        android:padding="@dimen/default_padding_smaller"
        android:textAllCaps="true"
        android:textColor="@color/colorOneKeyText"
        android:textSize="@dimen/default_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_x_larger"
        android:text="Theme"
        android:textColor="@color/colorOneKeyText"
        android:textSize="@dimen/default_text" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_tiny"
        android:background="@drawable/bg_white_border_corner">

        <com.ekino.onekeysdk.sample.view.SSpinner
            android:id="@+id/themeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding_smaller" />
    </FrameLayout>
</LinearLayout>